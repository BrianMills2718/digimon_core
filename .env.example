# KGAS Configuration - Complete Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Neo4j Graph Database
NEO4J_HOST=localhost
NEO4J_PORT=7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_MAX_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=30.0
NEO4J_KEEP_ALIVE=true

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Vector Database
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=19530
VECTOR_DB_NAME=kgas_vectors

# =============================================================================
# API KEYS - EXTERNAL SERVICES
# =============================================================================

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_ORG_ID=
OPENAI_MODEL=text-embedding-3-small

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google API
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GEMINI_MODEL=gemini-2.0-flash-exp

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/kgas.log

# Performance
MAX_WORKERS=4
ASYNC_TIMEOUT=30
RETRY_COUNT=3
BATCH_SIZE=100
API_RETRY_ATTEMPTS=3
API_TIMEOUT_SECONDS=30
API_BATCH_SIZE=10

# Environment
ENVIRONMENT=development
DEBUG=false
GRAPHRAG_MODE=development

# Security
ENCRYPTION_ENABLED=true
BACKUP_ENCRYPTION_PASSWORD=your-strong-backup-password-here
JWT_SECRET=your-jwt-secret-here
SALT_ROTATION_INTERVAL=2592000

# =============================================================================
# FEATURE TOGGLES
# =============================================================================

# Core Features
BACKUP_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECKS_ENABLED=true
CACHING_ENABLED=true

# Development Features
DEBUG_MODE=false
PROFILING_ENABLED=false
MOCK_EXTERNAL_APIS=false

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Prometheus Metrics
METRICS_PORT=8001
METRICS_PATH=/metrics

# Health Check
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10

# Tracing
TRACING_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/
BACKUP_COMPRESSION=true

# Remote Backup
REMOTE_BACKUP_ENABLED=false
REMOTE_BACKUP_PROVIDER=s3
REMOTE_BACKUP_BUCKET=kgas-backups
REMOTE_BACKUP_REGION=us-east-1

# =============================================================================
# PHASE 4 PRODUCTION CONFIGURATION
# =============================================================================

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
API_KEY=your-api-key-change-this-in-production

# Password Requirements
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_UPPERCASE=true

# Session & Token Configuration
SESSION_TIMEOUT=3600
JWT_EXPIRATION=3600
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Monitoring Configuration
PROMETHEUS_METRICS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=your-grafana-password

# Monitoring Intervals (seconds)
MONITORING_INTERVAL=60
HEALTH_CHECK_INTERVAL=30
ALERT_RETENTION_DAYS=30
METRIC_RETENTION_HOURS=24

# Alerting Configuration - Email
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=alerts@kgas.com

# Alerting Configuration - Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#alerts
SLACK_USERNAME=KGAS Monitor

# Alerting Configuration - Webhook
WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
WEBHOOK_HEADERS={"Content-Type": "application/json"}

# Performance Configuration
MAX_METRICS_HISTORY=10000
PERFORMANCE_THRESHOLD_SECONDS=5.0
CPU_USAGE_THRESHOLD=80
MEMORY_USAGE_THRESHOLD=85
DISK_USAGE_THRESHOLD=90

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=10000

# Connection Pool Configuration
CONNECTION_POOL_SIZE=10
CONNECTION_POOL_MAX_OVERFLOW=20
CONNECTION_POOL_TIMEOUT=30

# Storage Configuration
DATA_DIR=./data
STORAGE_DIR=./storage
WORKFLOW_STORAGE_DIR=./data/workflows
BACKUP_DIR=./backups
LOG_DIR=./logs

# File Upload Configuration
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=pdf,txt,docx,json

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Docker Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest
DOCKER_NETWORK=kgas-network

# Kubernetes Configuration
KUBERNETES_NAMESPACE=kgas-production
KUBERNETES_CLUSTER=production-cluster
KUBERNETES_CONFIG_PATH=/path/to/kubeconfig

# Phase 4 Production Features
ERROR_HANDLING_ENABLED=true
CIRCUIT_BREAKER_ENABLED=true
RETRY_ENABLED=true
FALLBACK_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_OPTIMIZATION_ENABLED=true
CACHE_OPTIMIZATION_ENABLED=true
SECURITY_HARDENING_ENABLED=true
AUDIT_LOGGING_ENABLED=true
ENCRYPTION_ENABLED=true
RATE_LIMITING_ENABLED=true
PRODUCTION_MONITORING_ENABLED=true
HEALTH_CHECKS_ENABLED=true
ALERTING_ENABLED=true

# Feature Flags
FEATURE_MULTI_DOCUMENT_PROCESSING=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_MONITORING=true
FEATURE_AUTO_SCALING=true
FEATURE_DISTRIBUTED_TRACING=true

# Compliance & Governance
AUDIT_RETENTION_DAYS=90
AUDIT_LOG_LEVEL=INFO
COMPLIANCE_MODE=false
PII_DETECTION_ENABLED=true
DATA_ANONYMIZATION_ENABLED=false
GDPR_COMPLIANCE=false

# Auto-scaling
AUTO_SCALING_ENABLED=false
MIN_REPLICAS=1
MAX_REPLICAS=10
TARGET_CPU_UTILIZATION=70
TARGET_MEMORY_UTILIZATION=80

# Load Balancing
LOAD_BALANCER_ENABLED=false
LOAD_BALANCER_ALGORITHM=round_robin

# Maintenance Configuration
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."
MAINTENANCE_ALLOWED_IPS=127.0.0.1,localhost

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Testing
TEST_DATABASE_URL=bolt://localhost:7687
TEST_REDIS_URL=redis://localhost:6379/1
PYTEST_ARGS=-v --tb=short