# Super-Digimon GraphRAG System Environment Configuration
# Copy this file to .env and update the values for your environment
# 
# This file contains all environment variables used by the KGAS system
# Organized by category for easy management and deployment

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
ENVIRONMENT=development               # Environment: development, staging, production
DEBUG=false                          # Enable debug mode (true/false)
LOG_LEVEL=INFO                      # Logging level: DEBUG, INFO, WARNING, ERROR
GRAPHRAG_MODE=development           # GraphRAG mode: development, production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687         # Neo4j connection URI
NEO4J_USER=neo4j                        # Neo4j username
NEO4J_PASSWORD=your_neo4j_password_here # Neo4j password (REQUIRED)
NEO4J_MAX_POOL_SIZE=50                  # Maximum connection pool size
NEO4J_CONNECTION_TIMEOUT=30.0           # Connection acquisition timeout (seconds)
NEO4J_KEEP_ALIVE=true                   # Keep database connections alive

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379        # Redis connection URL
REDIS_PASSWORD=                          # Redis password (if required)
REDIS_DB=0                              # Redis database number

# Qdrant Vector Database (Optional)
QDRANT_URL=http://localhost:6333        # Qdrant connection URL
QDRANT_API_KEY=                         # Qdrant API key (if required)
QDRANT_COLLECTION_NAME=graphrag_vectors # Qdrant collection name

# =============================================================================
# API CONFIGURATION
# =============================================================================

# OpenAI API
OPENAI_API_KEY=your_openai_key_here     # OpenAI API key (REQUIRED)
OPENAI_MODEL=text-embedding-3-small     # OpenAI embedding model
OPENAI_BASE_URL=                        # Custom OpenAI base URL (optional)
OPENAI_RATE_LIMIT=3500                  # OpenAI rate limit per minute

# Google/Gemini API
GOOGLE_API_KEY=your_google_key_here     # Google API key (REQUIRED)
GEMINI_API_KEY=your_gemini_key_here     # Gemini API key (REQUIRED)
GEMINI_MODEL=gemini-2.0-flash-exp       # Gemini model name
GEMINI_BASE_URL=                        # Custom Gemini base URL (optional)
GEMINI_RATE_LIMIT=60                    # Gemini rate limit per minute

# Azure OpenAI (Optional)
AZURE_OPENAI_API_VERSION=2023-12-01-preview  # Azure OpenAI API version
AZURE_OPENAI_ENDPOINT=                  # Azure OpenAI endpoint URL
AZURE_OPENAI_API_KEY=                   # Azure OpenAI API key

# API Request Configuration
API_RETRY_ATTEMPTS=3                    # Number of retry attempts
API_TIMEOUT_SECONDS=30                  # API request timeout
API_BATCH_SIZE=10                       # API batch processing size

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================

# Text Processing
TEXT_CHUNK_SIZE=512                     # Size of text chunks for processing
TEXT_CHUNK_OVERLAP=50                   # Character overlap between chunks
MAX_CHUNKS_PER_DOCUMENT=100             # Maximum chunks per document
SEMANTIC_SIMILARITY_THRESHOLD=0.85      # Semantic similarity threshold

# Entity Processing
ENTITY_CONFIDENCE_THRESHOLD=0.7         # Minimum confidence for entity extraction
EMBEDDING_BATCH_SIZE=100                # Batch size for embedding processing
MAX_ENTITIES_PER_CHUNK=20               # Maximum entities per chunk

# Graph Construction
PAGERANK_ITERATIONS=100                 # Maximum PageRank iterations
PAGERANK_DAMPING_FACTOR=0.85            # PageRank damping factor
PAGERANK_TOLERANCE=0.000001             # PageRank convergence tolerance
PAGERANK_MIN_SCORE=0.0001               # Minimum PageRank score
MAX_RELATIONSHIPS_PER_ENTITY=50         # Maximum relationships per entity
GRAPH_PRUNING_THRESHOLD=0.1             # Graph pruning threshold

# =============================================================================
# THEORY PROCESSING CONFIGURATION
# =============================================================================
THEORY_ENABLED=false                    # Enable theory-guided processing
THEORY_SCHEMA_TYPE=MASTER_CONCEPTS      # Theory schema type
THEORY_VALIDATION_ENABLED=true         # Enable theory validation
THEORY_ENHANCEMENT_BOOST=0.1            # Theory enhancement boost factor

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
SUPER_DIGIMON_LOG_LEVEL=INFO           # Application log level
SUPER_DIGIMON_LOG_CONSOLE=true         # Enable console logging
SUPER_DIGIMON_LOG_FILE_ENABLED=true    # Enable file logging
SUPER_DIGIMON_LOG_FILE=logs/super_digimon.log  # Log file path

# =============================================================================
# WORKFLOW CONFIGURATION
# =============================================================================
WORKFLOW_STORAGE_DIR=./data/workflows   # Workflow storage directory
WORKFLOW_CHECKPOINT_INTERVAL=10        # Checkpoint interval
WORKFLOW_MAX_RETRIES=3                 # Maximum workflow retries
WORKFLOW_TIMEOUT_SECONDS=300           # Workflow timeout

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
MAX_WORKERS=4                          # Maximum number of worker threads
MEMORY_LIMIT_GB=8                      # Memory limit in GB
PROCESSING_TIMEOUT=600                 # Processing timeout in seconds
CACHE_SIZE_MB=512                      # Cache size in MB

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEVELOPMENT_MODE=true                  # Enable development features
MOCK_SERVICES=false                    # Use mock services for testing
PROFILING_ENABLED=false                # Enable performance profiling
VERBOSE_LOGGING=false                  # Enable verbose logging

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
CONTAINER_NAME=super-digimon           # Container name for deployment
PORT=8000                              # Application port
HOST=0.0.0.0                          # Application host
WORKERS=1                              # Number of worker processes

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
METRICS_ENABLED=false                  # Enable metrics collection
METRICS_PORT=9090                      # Metrics endpoint port
HEALTH_CHECK_INTERVAL=30               # Health check interval in seconds
TELEMETRY_ENABLED=false                # Enable telemetry

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
STRICT_SCHEMA_VALIDATION=false         # Enable strict schema validation
INPUT_VALIDATION_ENABLED=true          # Enable input validation
RATE_LIMITING_ENABLED=true             # Enable rate limiting
SECURITY_HEADERS_ENABLED=true          # Enable security headers

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=false                   # Enable automatic backups
BACKUP_INTERVAL_HOURS=24               # Backup interval in hours
BACKUP_RETENTION_DAYS=7                # Backup retention period
BACKUP_LOCATION=./backups              # Backup storage location

# =============================================================================
# NOTES
# =============================================================================
# 1. Replace all placeholder values (your_*_key_here) with actual values
# 2. For production deployment, set ENVIRONMENT=production
# 3. Enable strict validation in production: STRICT_SCHEMA_VALIDATION=true
# 4. Use strong passwords and secure API keys
# 5. Consider using Docker secrets or environment management tools
# 6. Monitor resource usage and adjust limits as needed
# 7. Enable monitoring and logging for production environments